{
    "preset": "laravel",
    "exclude": [
        "bin",
        "source",
        "downloads",
        "builds",
        "buildroot",
        "tests/snippets"
    ],
    "rules": {
        "concat_space": {
            "spacing": "one"
        },
        "not_operator_with_successor_space": false,
        "binary_operator_spaces": {
            "operators": {
                "=": "single_space",
                "=>": "align"
            }
        }
    }
}
